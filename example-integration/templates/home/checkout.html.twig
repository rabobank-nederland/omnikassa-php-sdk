{% extends 'base.html.twig' %}

{% block title %}Sample Checkout - OmniKassa SDK{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
<div class="checkout-container">
    <div class="checkout-header">
        <h1>Sample Checkout</h1>
        <p>This demonstrates a complete shopping cart with customer and shipping information</p>
    </div>

    {% include 'includes/error.html.twig' %}

    <div class="cart-section">
        <h2>Shopping Cart</h2>
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>
                        <strong>{{ item.getName() }}</strong>
                        <br><small style="color: #6c757d;">{{ item.getDescription() }}</small>
                    </td>
                    <td>{{ item.getQuantity() }}</td>
                    <td class="price">&euro; {{ (item.getAmount().getAmount() / 100)|number_format(2) }}</td>
                    <td class="price">&euro; {{ (item.getAmount().getAmount() * item.getQuantity() / 100)|number_format(2) }}</td>
                </tr>
            {% endfor %}
                <tr style="border-top: 2px solid #dee2e6; background-color: #f8f9fa;">
                    <td colspan="3" style="text-align: right; font-weight: bold; padding: 1em;">Subtotal</td>
                    <td class="price" style="font-weight: bold;">&euro; {{ subtotal ?? total ?? '0.00' }}</td>
                </tr>
            {% if shippingCost is defined and shippingCost > 0 %}
                <tr style="background-color: #f8f9fa;">
                    <td colspan="3" style="text-align: right; padding: 1em;">Shipping Cost</td>
                    <td class="price">&euro; {{ shippingCost|number_format(2) }}</td>
                </tr>
            {% endif %}
                <tr style="border-top: 2px solid #dee2e6; background-color: #e9ecef;">
                    <td colspan="3" style="text-align: right; font-weight: bold; padding: 1em;">Total Amount</td>
                    <td class="price" style="font-weight: bold; font-size: 1.1em;">&euro; {{ total ?? '0.00' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="details-grid">
        <div class="customer-section">
            <div class="info-section">
                <h2>Customer Information</h2>
                <ul class="info-list">
                    <li><span class="info-label">Full Name:</span> <span class="info-value">{{ customer.getFullName() }}</span></li>
                    <li><span class="info-label">Email:</span> <span class="info-value">{{ customer.getEmailAddress() }}</span></li>
                    <li><span class="info-label">Phone:</span> <span class="info-value">{{ customer.getPhoneNumber() }}</span></li>
                </ul>
            </div>
        </div>

        <div class="shipping-section">
            <div class="info-section">
                <h2>Shipping Address</h2>
                <ul class="info-list">
                    <li><span class="info-label">Street:</span> <span class="info-value">{{ shipping.getStreet() }}</span></li>
                    <li><span class="info-label">City:</span> <span class="info-value">{{ shipping.getCity() }}</span></li>
                    <li><span class="info-label">Postal Code:</span> <span class="info-value">{{ shipping.getPostalCode() }}</span></li>
                    <li><span class="info-label">Country:</span> <span class="info-value">{{ shipping.getCountryCode() }}</span></li>
                </ul>
            </div>
        </div>

        {% if billing is defined %}
        <div class="billing-section">
            <div class="info-section">
                <h2>Billing Address</h2>
                <ul class="info-list">
                    <li><span class="info-label">Street:</span> <span class="info-value">{{ billing.getStreet() }}</span></li>
                    <li><span class="info-label">City:</span> <span class="info-value">{{ billing.getCity() }}</span></li>
                    <li><span class="info-label">Postal Code:</span> <span class="info-value">{{ billing.getPostalCode() }}</span></li>
                    <li><span class="info-label">Country:</span> <span class="info-value">{{ billing.getCountryCode() }}</span></li>
                </ul>
            </div>
        </div>
        {% endif %}
    </div>

    <div class="actions">
        <a href="{{ path('home') }}" class="btn btn-primary">‚Üê Back to Home</a>
        <form method="post" action="{{ path('sample_checkout_process') }}" style="display: inline;">
            <button class="btn btn-success" type="submit">Place Order</button>
        </form>
        <form method="post" action="{{ path('fast_checkout_process') }}" style="display: inline;">
            <button class="btn btn-success" type="submit">fast checkout (iDEAL)</button>
        </form>
    </div>
</div>
{% endblock %}
