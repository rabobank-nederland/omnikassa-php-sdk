{% extends 'base.html.twig' %}

{% block title %}Refund Result - OmniKassa SDK{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
<div class="result-container">
    <div class="result-header">
        <h1>Refund Initiated</h1>
        <p>The refund request has been created successfully</p>
    </div>

    <div class="result-section">
        <h2>Refund Summary (MOCK! No PHP SDK Implementation yet)</h2>
        <div class="order-info">
            <p><strong>Order ID:</strong> {{ orderId }}</p>
            <p><strong>Status:</strong> <span style="color: #28a745; font-weight: bold;">Request Created</span></p>
        </div>
    </div>

    <div class="result-section">
        <h2>Refund Status</h2>
        <div class="order-info">
            <p><strong>Refund ID:</strong> {{ refundResult.refundId }}</p>
            <p><strong>Status:</strong> <span style="color: #28a745; font-weight: bold;">{{ refundResult.status }}</span></p>
            <p><strong>Amount:</strong> €{{ (refundResult.amount / 100)|number_format(2) }}</p>
            <p><strong>Currency:</strong> {{ refundResult.currency }}</p>
            <p><strong>Created At:</strong> {{ refundResult.createdAt }}</p>
            <p><strong>Description:</strong> {{ refundResult.description }}</p>
        </div>
    </div>

    <div class="actions">
        <a href="{{ path('home') }}" class="btn btn-primary">← Back to Home</a>
        <a href="{{ path('refund') }}" class="btn btn-secondary">Create Another Refund</a>
    </div>
</div>
{% endblock %}
